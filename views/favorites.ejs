<h2>Favorite Flows</h2>

<% waRivers.forEach(function(rivers) { %>
   <div class="well">
     <h2><%= rivers.riverName %></h2>
     <p><%= rivers.riverFlow %> cfs</p>
     <a href="/favorites/<%= waRivers.river %>" class="btn btn-danger glyphicon glyphicon-trash delete-btn"></a>
     <hr>
     <hr>
   </div>
 <% }); %>
</div>

<script>
$('.delete-btn').click(function(e) {
	console.log('I am under the delete button...........');
	e.preventDefault();
	var url = $(this).attr('href');

	$.ajax({
  	url: url,
 	method: 'DELETE'
	}).done(function() {
  	window.location.href = '/favorites';
		});
});
</script>

